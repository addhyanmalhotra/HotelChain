<div class="card col-lg-12 my-2">
  <div class="card-header my-4">
    <h1>Branches</h1>
  </div>
  <div class="card-body">
    <p id="notice"><%= notice %></p>
    <div class="col-lg-12">
      <table class="table table-striped" id="table">
        <thead>
          <th>Branch name</th>
          <th>Manager</th>
          <th>Stars</th>
          <th>Street address</th>
          <th>City</th>
          <th>Country</th>
          <th>Pin Code</th>
          <th></th>
          <th></th>
          <th></th>
        </thead>

        <tbody>
        <% @hotels.each do |hotel| %>
          <tr>
            <td><%= hotel.branch_name %></td>
            <td><%= hotel.manager_id %></td>
            <td><%= hotel.stars %></td>
            <td><%= hotel.street_address %></td>
            <td><%= hotel.city %></td>
            <td><%= hotel.country %></td>
            <td><%= hotel.pincode %></td>
            <td><%= link_to 'Show', hotel, class: "btn btn-pill btn-primary" %></td>
            <td><%= link_to 'Edit', edit_hotel_path(hotel), class: "btn btn-warning" %></td>
            <td><%= button_to 'Destroy', hotel, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <br>
    <%= link_to 'New Hotel', new_hotel_path, class: "btn btn-success" %>
  </div>
</div>
