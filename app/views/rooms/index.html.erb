<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>R no</th>
      <th>Tarrif</th>
      <th>Occupancy</th>
      <th>Branch</th>
      <th></th>
      <th></th>
      <th></th>

    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.r_no %></td>
        <td><%= room.tarrif %></td>
        <td><%= room.occupancy %></td>
        <td><%= @branches_hash[room.branch_id] %></td>
        <td><%= link_to 'Show', room, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_room_path(room), class: "btn btn-warning" %></td>
        <td><%= button_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room', new_room_path, class: "btn btn-primary" %>
